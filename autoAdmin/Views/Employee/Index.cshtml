@model IEnumerable<autoOffice.Models.Employee>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Tables</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                DataTables Advanced Tables
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <p>
                    @Html.ActionLink("Create New", "Create")
                </p>
                <div class="dataTable_wrapper">
                    
                    <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                          <thead>
                               <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.Name)
                                </th>
                                <th style="width:200px">
                                    @Html.DisplayNameFor(model => model.MailAddress)
                                </th>
                                <th style="width:50px">
                                    @Html.DisplayNameFor(model => model.Department)
                                </th>
                                <th style="width:100px">
                                    @Html.DisplayNameFor(model => model.LeaveReportTo)
                                </th>
                                <th>Operation</th>
                            </tr>
                          </thead>
                        <tbody>
                            @foreach (var item in Model) {
                                <tr>
                                    <td>
                                        <p class="fa fa-user" style="height:5px" />
                                        @Html.DisplayFor(modelItem => item.Name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.MailAddress)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Department)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.LeaveReportName)
                                    </td>
                                    <td>
                                        @Html.ActionLink("Edit", "Edit", new { id=item.ID }) |
                                        @Html.ActionLink("Details", "Details", new { id=item.ID }) |
                                        @Html.ActionLink("Delete", "Delete", new { id=item.ID })
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->


