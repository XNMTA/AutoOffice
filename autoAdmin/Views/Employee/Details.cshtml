@model autoOffice.Models.Employee



@{
    ViewBag.Title = "Forms";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Employee Details</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <label>@Html.DisplayFor(model => model.Name)</label>
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-lg-6">
                            <div class="form-group">
                                <label>@Html.DisplayNameFor(model => model.MailAddress)</label>
                                
                                <p class="help-block">@Html.DisplayFor(model => model.MailAddress)</p>
                            </div>
                            <div class="form-group">
                                <label>@Html.DisplayNameFor(model => model.Department)</label>

                                <p class="help-block">@Html.DisplayFor(model => model.Department)</p>
                            </div>
                            <div class="form-group">
                                <label>@Html.DisplayNameFor(model => model.LeaveReportTo)</label>

                                <p class="help-block">@ViewBag.LeaveReportTo.Name</p>
                            </div>
                    </div>

                    
                </div>
                <!-- /.row (nested) -->
            </div>
            <!-- /.panel-body -->
            <div class="panel-footer">
                <p>
                    @Html.ActionLink("Edit", "Edit", new { id = Model.ID }) |
                    @Html.ActionLink("Back to List", "Index")
                </p>
            </div>
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
